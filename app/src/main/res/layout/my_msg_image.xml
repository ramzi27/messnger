<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginTop="@dimen/msg_margin_image"
    android:gravity="right"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/myImgMsg"
        android:layout_width="@dimen/msg_image_width"
        android:layout_height="@dimen/msg_image_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginEnd="40dp"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/myImgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="9dp"
        android:layout_toStartOf="@+id/myImgMsg" />
</RelativeLayout>