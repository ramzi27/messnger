<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:layout_marginTop="@dimen/msg_margin_image"
    android:gravity="left"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/friendMsgImage2"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_height"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_account_placeholder" />

    <ImageView
        android:id="@+id/friendImgMsg"
        android:layout_width="@dimen/msg_image_width"
        android:layout_height="@dimen/msg_image_height"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/friendMsgImage2"
        android:background="@drawable/img_bck"
        app:srcCompat="@android:color/transparent" />

</RelativeLayout>